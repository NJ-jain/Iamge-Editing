                        document.querySelector("img").src = `/images/uploads/${data.data.arr[data.data.arr.length-1]}`;

                    }
                })
        })
        document.querySelector("#brightness").addEventListener("change" , function(){
            console.log(document.querySelector("#brightness").value);
            document.querySelector("#forbrightness span").innerHTML = document.querySelector("#brightness").value;     
            var image = document.querySelector("#image").attributes.src.textContent;
            // console.log(image)
            var realname = image.split("/")[3]
            axios.get(`/brightness/${realname}/${document.querySelector("#brightness").value}`)
                .then(function (data) {
                    if (data) {
                        console.log(data.data.arr[data.data.arr.length-1]);
                        document.querySelector("img").src = `/images/uploads/${data.data.arr[data.data.arr.length-1]}`;

                    }
                })
        })
        document.querySelector("#constrant").addEventListener("change" , function(){
            console.log(document.querySelector("#constrant").value);
            document.querySelector("#forcontrast span").innerHTML = document.querySelector("#constrant").value; 
            var image = document.querySelector("#image").attributes.src.textContent;
            // console.log(image)
