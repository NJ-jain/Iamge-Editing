        <!-- Content here -->
        <ul type="none" style="width: 100%; padding: 0; text-transform:uppercase ;"  >
            <li>
                <button type="button" style="width: 100%; text-transform:uppercase ;" id="greyscale" class="btn btn-outline-success btn-lg">greyScale</button>
