        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        document.querySelector("#greyscale").addEventListener("click", function () {
            var image = document.querySelector("#image").attributes.src.textContent;
            // console.log(image)
            var realname = image.split("/")[3] 
            // console.log(realname)
            axios.get(`/greyscale/${realname}`)
                .then(function (data) {
                    if (data) {
                        console.log(data.data.arr[data.data.arr.length-1]);
                        document.querySelector("img").src = `/images/uploads/${data.data.arr[data.data.arr.length-1]}`;

                    }
                })
        })



